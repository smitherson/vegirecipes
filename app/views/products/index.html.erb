<h1>Listing products</h1>


<% row_id = 1 %>
<div class="row">
  <% @products.each do |product| %>
    <% row_id = row_id+1 %>
        <div class="product">
        <div class="span3"><%= link_to  image_tag(product.image.url(:thumb)), product %></div>
        <div class="span2 ">
          <div class="product_name"><%= product.name %></div>
        </div>

        <div class="span3 ">
          <div class="product_description">
            Protein: <%= product.protein %> <br> 
            Calories: <%= product.calories %> <br>
            Carbonhidrates: <%= product.carbs %> 
            Fat: <%= product.fat %> 
          </div>
        </div>
      </div>
    <% if (row_id-1)%3==0  %>
      </div><div class="row">
    <% end %>
  <% end %>
  </div>


<br>

<%= link_to 'New Product', new_product_path %>
