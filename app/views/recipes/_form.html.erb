<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="span12">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :instructions %><br>
      <%= f.text_area :instructions %>
    </div>
  </div>
  <div class="span6">
    <%= image_tag(@recipe.image.url(:medium)) %>
  </div>
</div>

<div class="row">
  <div class="field span6">
    <%= f.label :complexity %><br>
    <%= f.select :complexity, [['Easy',1],['Medium',2],['Hard',3]] %>
  </div>
</div>
<div class="row">
  <div class="field span6">
    <%= f.label :prep_time %><br>
    <%= f.time_field :prep_time %>
  </div>
</div> 
<div class="row">
  <div class="field span2">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  
  <%= render partial: 'product_list' %>
  
  <div class="actions span2">
    <%= f.submit %>
  </div>
</div>
<% end %>
