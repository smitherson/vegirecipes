<% row_id = 1 %>
<div class="row">
  <% @recipes.each do |recipe| %>
    <% row_id = row_id+1 %>
        <div class="recipe">
        <div class="span3"><%= link_to  image_tag(recipe.image.url(:thumb)), recipe %></div>
        <div class="span2 ">
          <div class="recipe_name"><%= recipe.name %></div>
            <%= recipe.complexity_text %> <br>
            <%= recipe.prep_time_text %>
        </div>

        <div class="span3 ">
          <div class="recipe_description">
            Protein: <%= recipe.total_protein %> <br> 
            Calories: <%= recipe.total_calories %> <br>
            Carbonhidrates: <%= recipe.total_carbs %> 
            Fat: <%= recipe.total_fat %> 
          </div>
        </div>
      </div>
    <% if (row_id-1)%3==0  %>
      </div><div class="row">
    <% end %>
  <% end %>
  </div>

